    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Safely initialize GOV.UK Frontend components if available
            if (window.GOVUKFrontend && typeof window.GOVUKFrontend.initAll === 'function') {
                window.GOVUKFrontend.initAll();
            } else {
                console.warn('GOV.UK Frontend not initialized - window.GOVUKFrontend.initAll not available');
            }

            fetchDocs();

            // Initialize chat functionality
            initChat();

            // Initialize file upload
            initFileUpload();
        });

        function fetchDocs(forceReload = false) {
            document.getElementById('doc-list').innerHTML = '<li class="govuk-body-s">Loading documents...</li>';

            const url = forceReload ? '/ai-agent/docs?force_reload=true' : '/ai-agent/docs';
            console.log(`Fetching documents with force_reload=${forceReload}`);

            fetch(url)
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Network response was not ok: ' + res.status);
                    }
                    return res.json();
                })
                .then(data => {
                    console.log('Document list response:', data);
                    const docList = document.getElementById('doc-list');
                    docList.innerHTML = '';

                    // Show RAG status if available
                    if (data.rag_status) {
                        // Get the total chunk count
                        const chunkCount = data.rag_status.total_chunk_count || 0;

                        const ragStatus = data.rag_status.initialized
                            ? `RAG database ready (${chunkCount} chunks)`
                            : 'RAG database not initialized';

                        const statusColor = data.rag_status.initialized ? '#00703c' : '#d4351c';

                        console.log(`RAG status: initialized=${data.rag_status.initialized}, chunks=${chunkCount}`);

                        docList.innerHTML += `
                            <li class="govuk-body-s" style="border-bottom: 1px solid #b1b4b6; padding-bottom: 8px; margin-bottom: 12px;">
                                <span style="color: ${statusColor}; font-weight: bold;">
                                    ${ragStatus}
                                </span>
                            </li>
                        `;
                    }

                    if (data.documents && data.documents.length > 0) {
                        data.documents.forEach(doc => {
                            // Get file details
                            const fileName = doc.name || doc;
                            const size = doc.size ? `(${Math.round(doc.size / 1024)} KB)` : '';
                            let lastModified = '';

                            if (doc.last_modified) {
                                const date = new Date(doc.last_modified * 1000);
                                lastModified = date.toLocaleString();
                            }

                            // Get chunk count if available
                            const chunkCount = doc.chunk_count ?
                                `<div style="font-size: 12px; color: #00703c;">Chunks: ${doc.chunk_count}</div>` : '';

                            const li = document.createElement('li');
                            li.innerHTML = `
                                <div class="doc-info">
                                    <span class="doc-name">${fileName}</span>
                                    <div class="doc-meta" style="font-size: 13px; color: #505a5f; margin-bottom: 5px;">
                                        ${size} ${lastModified ? ' • Modified: ' + lastModified : ''}
                                    </div>
                                    ${chunkCount}
                                </div>
                                <div class="doc-actions">
                                    <button class="govuk-button govuk-button--secondary govuk-button--small verify-doc-btn" data-filename="${fileName}">Verify</button>
                                    <button class="govuk-button govuk-button--danger govuk-button--small remove-doc-btn" data-filename="${fileName}">Remove</button>
                                </div>
                            `;
                            docList.appendChild(li);
                        });

                        // Add event listeners to buttons
                        document.querySelectorAll('.remove-doc-btn').forEach(btn => {
                            btn.addEventListener('click', function () {
                                removeDoc(this.getAttribute('data-filename'));
                            });
                        });

                        document.querySelectorAll('.verify-doc-btn').forEach(btn => {
                            btn.addEventListener('click', function () {
                                verifyFileUpload(this.getAttribute('data-filename'));
                            });
                        });
                    } else {
                        docList.innerHTML += `
                            <li class="govuk-body-s">No documents uploaded yet.</li>
                            <li class="govuk-body-s" style="margin-top: 10px;">
                                <p>Upload policy documents to enable the assistant to answer policy-specific questions.</p>
                                <p>Supported formats: PDF, DOCX, TXT</p>
                            </li>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error fetching documents:', error);
                    const docList = document.getElementById('doc-list');
                    docList.innerHTML = '<li class="govuk-body-s govuk-!-font-weight-bold" style="color: #d4351c;">Error loading documents. Please try again.</li>';

                    // Add a retry button
                    const retryBtn = document.createElement('button');
                    retryBtn.className = 'govuk-button govuk-button--secondary govuk-button--small';
                    retryBtn.textContent = 'Retry';
                    retryBtn.addEventListener('click', fetchDocs);
                    docList.appendChild(retryBtn);
                });
        }

        function removeDoc(filename) {
            if (!confirm('Are you sure you want to remove this document from the knowledge base?')) return;

            // Disable all remove buttons to prevent multiple clicks
            document.querySelectorAll('.remove-doc-btn').forEach(btn => {
                btn.disabled = true;
                btn.textContent = 'Removing...';
            });

            // Show status
            showNotification('Removing document and updating RAG database...', 'info');

            fetch('/ai-agent/docs/' + encodeURIComponent(filename), {
                method: 'DELETE'
            })
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Server responded with status: ' + res.status);
                    }
                    return res.json();
                })
                .then(data => {
                    if (data.success) {
                        showNotification('Document removed successfully', 'success');
                        fetchDocs(true); // Force reload the RAG database
                    } else {
                        showNotification('Failed to remove document: ' + (data.error || 'Unknown error'), 'error');
                        // Re-enable buttons
                        document.querySelectorAll('.remove-doc-btn').forEach(btn => {
                            btn.disabled = false;
                            btn.textContent = 'Remove';
                        });
                    }
                })
                .catch(error => {
                    console.error('Error removing document:', error);
                    showNotification('Error removing document: ' + error.message, 'error');
                    // Re-enable buttons
                    document.querySelectorAll('.remove-doc-btn').forEach(btn => {
                        btn.disabled = false;
                        btn.textContent = 'Remove';
                    });
                });
        }

        function showProgress(percent, label) {
            const container = document.getElementById('progress-container');
            const bar = document.getElementById('progress-bar-inner');
            const text = document.getElementById('progress-label');

            container.style.display = 'block';
            bar.style.width = percent + '%';
            bar.textContent = percent + '%';
            text.textContent = label;

            if (percent >= 100) {
                setTimeout(() => {
                    container.style.display = 'none';
                }, 1500);
            }
        }

        function showNotification(message, type) {
            const status = document.getElementById('upload-status');
            status.textContent = message;
            status.className = 'govuk-body govuk-!-margin-left-2';

            if (type === 'error') {
                status.style.color = '#d4351c';
                status.style.fontWeight = 'bold';
            } else if (type === 'success') {
                status.style.color = '#00703c';
                status.style.fontWeight = 'normal';
            } else if (type === 'warning') {
                status.style.color = '#f47738';
                status.style.fontWeight = 'normal';
            } else {
                status.style.color = '';
                status.style.fontWeight = 'normal';
            }

            // Also add to chat window for important notifications
            if (type === 'error' || type === 'success') {
                const chatBox = document.getElementById('chat-box');
                if (chatBox) {
                    const styleColor = type === 'error' ? '#d4351c' : (type === 'success' ? '#00703c' : '#1d70b8');
                    chatBox.innerHTML += `<div class="chat-message ${type}">
                        <strong>System:</strong> <span style="color: ${styleColor}">${message}</span>
                    </div>`;
                    chatBox.scrollTop = chatBox.scrollHeight;
                }
            }

            // Auto-clear after a delay
            setTimeout(() => {
                status.textContent = '';
            }, 5000);
        }

        function initChat() {
            const chatBox = document.getElementById('chat-box');
            const inputField = document.getElementById('input');
            const sendButton = document.getElementById('send-btn');

            // Style the chat box
            chatBox.style.padding = '20px';
            chatBox.style.height = '300px';
            chatBox.style.border = '1px solid #b1b4b6';
            chatBox.style.borderRadius = '4px';
            chatBox.style.backgroundColor = '#f8f8f8';
            chatBox.style.fontFamily = '"GDS Transport", arial, sans-serif';
            chatBox.style.overflowY = 'auto'; // Enable scrolling

            // Add welcome message
            chatBox.innerHTML = '<div class="chat-message assistant"><strong>Assistant:</strong> Hello! I\'m your policy assistant. How can I help you today? You can upload policy documents using the form above, and I\'ll be able to answer questions about them.</div>';

            function sendMessage() {
                const input = inputField.value.trim();
                if (!input) return;

                // Disable input while processing
                inputField.disabled = true;
                sendButton.disabled = true;
                sendButton.textContent = 'Sending...';

                // Add user message to chat
                chatBox.innerHTML += `<div class="chat-message user"><strong>You:</strong> ${input}</div>`;

                // Add thinking indicator with a unique ID
                const thinkingId = 'thinking-' + Date.now();
                chatBox.innerHTML += `<div id="${thinkingId}" class="chat-message assistant"><strong>Assistant:</strong> <em>Thinking...</em></div>`;
                chatBox.scrollTop = chatBox.scrollHeight;

                // Check if we should fetch the document list first to ensure RAG DB is up to date
                fetch('/ai-agent/docs')
                    .then(res => res.json())
                    .catch(err => console.error('Error checking docs before chat:', err))
                    .finally(() => {
                        // Send request to backend with a timeout
                        const controller = new AbortController();
                        const timeoutId = setTimeout(() => controller.abort(), 60000); // 60 second timeout

                        console.log('Sending chat request with input:', input);
                        fetch('/ai-agent/chat', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ input: input }),
                            signal: controller.signal
                        })
                            .then(response => {
                                clearTimeout(timeoutId);
                                if (!response.ok) {
                                    throw new Error('Server responded with status: ' + response.status);
                                }
                                return response.json();
                            })
                            .then(data => {
                                console.log('Chat response:', data);
                                // Remove thinking indicator
                                const thinkingElement = document.getElementById(thinkingId);
                                if (thinkingElement) {
                                    thinkingElement.remove();
                                }

                                let responseText = data.response || "I didn't receive a proper response. Please try again.";
                                const source = data.source || "unknown";

                                // Add source indicator for debugging
                                let sourceLabel = "";
                                if (source === "rag") {
                                    sourceLabel = "<span style='font-size: 11px; color: #00703c;'>[Policy knowledge]</span> ";
                                } else if (source === "web") {
                                    sourceLabel = "<span style='font-size: 11px; color: #1d70b8;'>[Web search]</span> ";
                                } else if (source === "direct_llm") {
                                    sourceLabel = "<span style='font-size: 11px; color: #6f72af;'>[General knowledge]</span> ";
                                } else if (source === "error") {
                                    sourceLabel = "<span style='font-size: 11px; color: #d4351c;'>[Error]</span> ";
                                }

                                // Add assistant response with source indicator
                                chatBox.innerHTML += `<div class="chat-message assistant">
                                    <strong>Assistant:</strong> ${sourceLabel}${responseText}
                                </div>`;

                                // Reset UI
                                inputField.value = "";
                                inputField.disabled = false;
                                sendButton.disabled = false;
                                sendButton.textContent = 'Send';

                                // Scroll to bottom
                                chatBox.scrollTop = chatBox.scrollHeight;

                                // Focus input field
                                inputField.focus();
                            })
                            .catch(error => {
                                clearTimeout(timeoutId);
                                console.error('Error:', error);

                                // Remove thinking indicator
                                const thinkingElement = document.getElementById(thinkingId);
                                if (thinkingElement) {
                                    thinkingElement.remove();
                                }

                                let errorMessage = "Sorry, there was an error processing your request.";
                                if (error.name === 'AbortError') {
                                    errorMessage = "The request took too long to process. Please try again or ask a simpler question.";
                                } else {
                                    errorMessage = `Error: ${error.message}. Please try again.`;
                                }

                                chatBox.innerHTML += `<div class="chat-message error"><strong>Assistant:</strong> ${errorMessage}</div>`;

                                // Reset UI
                                inputField.disabled = false;
                                sendButton.disabled = false;
                                sendButton.textContent = 'Send';
                                chatBox.scrollTop = chatBox.scrollHeight;
                            });
                    });
            }

            // Event listeners
            inputField.addEventListener('keydown', function (event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    sendMessage();
                }
            });

            sendButton.addEventListener('click', function () {
                sendMessage();
            });
        }

        function initFileUpload() {
            const uploadForm = document.getElementById('upload-form');
            const fileInput = document.getElementById('file-upload');
            const uploadBtn = document.getElementById('upload-btn');

            uploadForm.addEventListener('submit', function (event) {
                event.preventDefault();

                if (!fileInput.files[0]) {
                    showNotification('Please select a file to upload', 'error');
                    return;
                }

                // Check file size (max 10MB)
                const maxSize = 10 * 1024 * 1024; // 10MB in bytes
                if (fileInput.files[0].size > maxSize) {
                    showNotification('File is too large. Maximum size is 10MB.', 'error');
                    return;
                }

                // Check file type
                const fileName = fileInput.files[0].name.toLowerCase();
                if (!fileName.endsWith('.pdf') && !fileName.endsWith('.docx') && !fileName.endsWith('.txt')) {
                    showNotification('Only PDF, DOCX, and TXT files are supported.', 'error');
                    return;
                }

                // Prepare form data
                const formData = new FormData();
                formData.append('file', fileInput.files[0]);

                // Update UI
                uploadBtn.disabled = true;
                uploadBtn.textContent = 'Uploading...';
                showNotification('Uploading...', 'info');
                showProgress(10, 'Uploading file...');

                // Send request with a timeout
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 180000); // 3 minute timeout for larger files

                fetch('/ai-agent/upload', {
                    method: 'POST',
                    body: formData,
                    signal: controller.signal
                })
                    .then(response => {
                        clearTimeout(timeoutId);
                        if (!response.ok) {
                            throw new Error('Server returned status: ' + response.status);
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Upload response:', data);
                        if (data.success) {
                            // Update progress bar with real-time updates
                            showProgress(40, 'Processing document...');

                            setTimeout(() => {
                                showProgress(70, 'Creating vector embeddings...');

                                setTimeout(() => {
                                    showProgress(100, 'Complete!');
                                    showNotification(data.message || 'Document uploaded and processed successfully', 'success');
                                    fileInput.value = '';

                                    // Use backend-provided filename for verification
                                    const backendFilename = data.filename;
                                    if (backendFilename) {
                                        console.log(`Verifying uploaded file: ${backendFilename}`);
                                        // Add a slight delay before verification to allow backend processing to complete
                                        setTimeout(() => {
                                            verifyFileUpload(backendFilename);
                                            // Force refresh the document list to ensure latest RAG status
                                            setTimeout(() => {
                                                fetchDocs(true);  // Force reload the RAG database
                                            }, 1500);
                                        }, 1000);
                                    } else {
                                        // Even if no filename returned, refresh docs list
                                        console.log('No filename in response, refreshing docs list anyway');
                                        fetchDocs(true); // Always force reload after upload
                                    }

                                    // Reset button
                                    uploadBtn.disabled = false;
                                    uploadBtn.textContent = 'Upload Document';

                                    // Add info about document usage
                                    const chatBox = document.getElementById('chat-box');
                                    if (chatBox) {
                                        chatBox.innerHTML += `<div class="chat-message assistant">
                                            <strong>System:</strong> 
                                            <span style='font-size: 14px; color: #00703c;'>
                                                New document "${backendFilename}" has been added to the knowledge base. 
                                                You can now ask questions about this document.
                                            </span>
                                        </div>`;
                                        chatBox.scrollTop = chatBox.scrollHeight;
                                    }

                                }, 800);
                            }, 800);
                        } else {
                            showProgress(0, '');
                            showNotification(data.error || 'Upload failed', 'error');
                            fetchDocs();
                            // Reset button
                            uploadBtn.disabled = false;
                            uploadBtn.textContent = 'Upload Document';
                        }
                    })
                    .catch(error => {
                        clearTimeout(timeoutId);
                        console.error('Error uploading file:', error);
                        showProgress(0, '');

                        let errorMessage = 'Error uploading file.';
                        if (error.name === 'AbortError') {
                            errorMessage = 'Upload took too long and was cancelled. Please try a smaller file.';
                        } else {
                            errorMessage = 'Error uploading file: ' + error.message;
                        }

                        showNotification(errorMessage, 'error');
                        fetchDocs();
                        // Reset button
                        uploadBtn.disabled = false;
                        uploadBtn.textContent = 'Upload Document';
                    });
            });

            // Add a file input change listener to show the selected filename
            fileInput.addEventListener('change', function () {
                if (this.files[0]) {
                    const fileName = this.files[0].name;
                    const fileSize = Math.round(this.files[0].size / 1024);
                    showNotification(`Selected file: ${fileName} (${fileSize} KB)`, 'info');
                }
            });
        }

        // Simple secure filename function to mimic server-side behavior
        function secure_filename(filename) {
            // Remove any non-alphanumeric characters except for _ . -
            return filename.replace(/[^a-zA-Z0-9_.-]/g, '_');
        }

        function verifyFileUpload(filename) {
            console.log(`Verifying file: ${filename}`);

            // Update UI to show verification in progress
            showNotification(`Verifying document ${filename}...`, 'info');

            // Verify the file exists on the server
            fetch('/ai-agent/verify-file/' + encodeURIComponent(filename))
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Server responded with: ' + res.status);
                    }
                    return res.json();
                })
                .then(data => {
                    console.log('Verification response:', data);
                    if (data.exists) {
                        console.log(`File verification success: ${filename} exists on server (${data.size} bytes)`);

                        // Format message with RAG status
                        let message = `Verified: ${filename} is on server (${Math.round(data.size / 1024)} KB)`;
                        if (data.in_rag) {
                            message += ' and indexed in RAG database';
                        } else {
                            message += ' but NOT yet in RAG database';
                        }

                        showNotification(message, data.in_rag ? 'success' : 'warning');
                        console.log('In RAG:', data.in_rag);

                        // Multiple attempts to refresh the document list
                        fetchDocs();
                        setTimeout(fetchDocs, 1000);
                        setTimeout(fetchDocs, 3000);

                        // If not in RAG, offer to retry ingestion
                        if (!data.in_rag) {
                            if (confirm('Document is not in the RAG database. Would you like to retry ingestion?')) {
                                // Call document re-ingestion (implemented as delete + re-upload)
                                reIngestDocument(filename);
                            }
                        }
                    } else {
                        console.error(`File verification failed: ${filename} not found on server`);
                        showNotification(`Warning: File ${filename} was not found on server`, 'error');
                        // Try refreshing docs list anyway
                        fetchDocs();
                    }
                })
                .catch(error => {
                    console.error('Error verifying file:', error);
                    showNotification(`Error verifying upload: ${error.message}`, 'error');
                    // Try refreshing docs list anyway
                    fetchDocs();
                });
        }

        // Function to re-ingest a document by essentially deleting and re-processing it
        function reIngestDocument(filename) {
            showNotification(`Re-ingesting document ${filename}...`, 'info');

            // Simulate a delete + reload by calling the delete endpoint with a special flag
            fetch('/ai-agent/docs/' + encodeURIComponent(filename), {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ reIngest: true })
            })
                .then(res => {
                    if (!res.ok) {
                        throw new Error('Server responded with status: ' + res.status);
                    }
                    return res.json();
                })
                .then(data => {
                    if (data.success) {
                        showNotification('Document re-ingested successfully', 'success');
                        fetchDocs();
                    } else {
                        showNotification('Failed to re-ingest document: ' + (data.error || 'Unknown error'), 'error');
                    }
                })
                .catch(error => {
                    console.error('Error re-ingesting document:', error);
                    showNotification('Error re-ingesting document: ' + error.message, 'error');
                });
        }
    </script>
